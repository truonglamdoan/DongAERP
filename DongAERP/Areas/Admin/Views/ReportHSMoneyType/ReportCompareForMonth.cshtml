                        listName.Add("ReportID", "Loại tiền");
                        listName.Add("AccumulateID1", month);
                        listName.Add("AccumulateID2", lastMonth);
                        listName.Add("AccumulateID3", monthLastYear);
                        listName.Add("CompareToMonth", "Tăng giảm </br> so với </br> tháng (+/-)");
