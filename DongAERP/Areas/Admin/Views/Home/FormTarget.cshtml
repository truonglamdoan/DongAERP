            columns.Bound(p => p.COL7).Width(150).Format("{0:N2}").Title("Tháng 7").HeaderHtmlAttributes(new { style = "text-align: center;font-weight: 700;" }).HtmlAttributes(new { style = " text-align: right;" });
            columns.Bound(p => p.COL8).Width(150).Format("{0:N2}").Title("Tháng 8").HeaderHtmlAttributes(new { style = "text-align: center;font-weight: 700;" }).HtmlAttributes(new { style = " text-align: right;" });
            columns.Bound(p => p.COL9).Width(150).Format("{0:N2}").Title("Tháng 9").HeaderHtmlAttributes(new { style = "text-align: center;font-weight: 700;" }).HtmlAttributes(new { style = " text-align: right;" });
            columns.Bound(p => p.COL10).Width(150).Format("{0:N2}").Title("Tháng 10").HeaderHtmlAttributes(new { style = "text-align: center;font-weight: 700;" }).HtmlAttributes(new { style = " text-align: right;" });
            columns.Bound(p => p.COL11).Width(150).Format("{0:N2}").Title("Tháng 11").HeaderHtmlAttributes(new { style = "text-align: center;font-weight: 700;" }).HtmlAttributes(new { style = " text-align: right;" });
            columns.Bound(p => p.COL12).Width(150).Format("{0:N2}").Title("Tháng 12").HeaderHtmlAttributes(new { style = "text-align: center;font-weight: 700;" }).HtmlAttributes(new { style = " text-align: right;" });

        })
        //.ToolBar(toolbar =>
        //{
        //    toolbar.Create().Text("Tạo mới").HtmlAttributes(new { style = " color: white; background-color: blue; " });
        //    //toolbar.Save().SaveText("Lưu").CancelText("Hủy Lưu");
        //    //.HtmlAttributes(new { style = " float: right; color: white; background: red; " });
        //})
        //s.Editable(editable => editable.Mode(GridEditMode.InLine))
        .Editable(editable => editable.Mode(GridEditMode.InLine).ConfirmDelete("Continue to delete this record? 1").DisplayDeleteConfirmation("Bạn muốn xóa dòng dữ liệu này ?"))
        .Scrollable(scrollable => scrollable.Height("auto"))
        .DataSource(dataSource => dataSource
            .Ajax()
            .Sort(sort => sort.Add(a=>a.TypeID))
            .Batch(true)
            .ServerOperation(false)
            .Events(events => events.Error("error_handler"))
            .Model(model => model.Id(p => p.ObjectID))
            .Read(read => read.Action("TargetRead", "Home"))
            .Create(create => create.Action("EditingCustom_Create", "Home"))
            .Update(update => update.Action("EditingCustom_Update", "Home"))
            .Destroy(destroy => destroy.Action("EditingCustom_Destroy", "Home"))
            .Events(events =>
            {
                events.Error("error_handler");
                //events.Error("onSort");
            })
        )
        .Events(events => events
            .DataBound("onDataBoundgridGrid")
            .Edit("onEdit")
        )
    )
<script>
    function error_handler(e) {
        if (e.errors) {
            var message = "Errors:\n";
            $.each(e.errors, function (key, value) {
                if ('errors' in value) {
                    $.each(value.errors, function() {
                        message += this + "\n";
                    });
                }
            });
            alert(message);
        }
    }
    // Prevent sorting when new record without Product Name is added
    function onSort(e) {
        var gridData = e.sender.dataSource.data()
        gridData.forEach(function (element) {
            if (!element.TypeID) {
                e.preventDefault()
            }
        });
    }

    // In đậm cho Grid
    function onDataBoundgridGrid(arg) {

        $('.k-button.k-button-icontext.k-grid-save-changes').css({ 'background-color': 'green', 'color': 'white', 'float': 'right' });
        $('.k-button.k-button-icontext.k-grid-cancel-changes').css({ 'background-color': 'red', 'color': 'white'});
    }

    function onEdit(e) {

        //debugger;
        //$(e.container).find("input[name='COL1']").prop('disabled', true)
    }

</script>