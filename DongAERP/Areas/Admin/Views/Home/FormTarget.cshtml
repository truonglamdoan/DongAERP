
@using Kendo.Mvc.UI
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@(Html.Kendo().Grid<DongA.Entities.FormTarget> ()
        .Name("Grid")
        .HtmlAttributes(new { style = " overflow: auto; " })
        .Columns(columns =>
        {
            columns.Command(command =>
