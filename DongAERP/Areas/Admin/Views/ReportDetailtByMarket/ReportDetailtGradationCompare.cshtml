                                                    .Position(ChartLegendPosition.Top)
                                                )
                                                .PlotArea(plotArea => plotArea.Background("white"))
                                                .SeriesDefaults(seriesDefaults => seriesDefaults
                                                    .Column()
                                                    .Stack(true)
                                                )
                                                .ChartArea(chartArea =>
                                                {
                                                    chartArea.Height(550);
                                                })
