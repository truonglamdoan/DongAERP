        toYear = listData[1];
        reportTypeID = listData[2];
        marketID = listData[3];

        month = string.Format("Tháng {0}/{1}", toMonth, toYear);
        lastMonth = int.Parse(toMonth) == 1 ? string.Format("Tháng {0}/{1}", 12, int.Parse(toYear) - 1) : string.Format("Tháng {0}/{1}", int.Parse(toMonth) - 1, toYear);
